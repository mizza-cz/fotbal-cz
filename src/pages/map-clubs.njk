              <option value="">Praha</option>
              <option value="">Středočeský</option>
              <option value="">...</option>
            </select>
          </div>
          <div class="Form-item">
            <label class="Form-label" for="">Okres</label>
            <select class="Select" name="" id="">
              <option value="">—Vyberte okres—</option>
              <option value="">Beroun</option>
              <option value="">Kladno</option>
              <option value="">...</option>
            </select>
          </div>
          <div class="Form-item">
            <label class="Form-label" for="">Kategorie</label>
            <select class="Select" name="" id="">
              <option value="">—Všechny kategorie—</option>
              <option value="">Muži</option>
              <option value="">Děti (mládež)</option>
              <option value="">Ženy</option>
              <option value="">Futsal</option>
              <option value="">Plážový fotbal</option>
            </select>
          </div>
          <div class="Form-item">
            <button type="submit" class="Button">Zobrazit kluby</button>
          </div>
        </form>

