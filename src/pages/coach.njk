                        <!-- Tie state -> class "u-c-grey--100" -->
                        <strong class="u-c-grey--100">2:2</strong>
                        <abbr title="Španělsko">ESP</abbr>
                        <span class="Flag fi fi-es fis"></span>
                      </a>
                    </td>
                  </tr>
                </tbody>
              </table>
            </td>
          </tr>
          <!-- Team stats row -->
          <tr>
            <td>Česko U21</td>
            <td>3</td>
