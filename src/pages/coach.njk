                      </a>
                    </td>
                  </tr>
                  <!-- Match row -->
                  <tr>
                    <td>Liga národů 2022/23</td>
                    <td>11. 10. 2023</td>
                    <td>Olomouc</td>
                    <td>
                      <a href="#" class="TableStats-match">
                        <span class="Flag fi fi-cz fis"></span>
                        <abbr title="Česko">CZE</abbr>
                        <!-- Win state -> class "u-c-green--dark" -->
                        <!-- <strong class="u-c-green--dark">2:0</strong> -->
                        <!-- Loss state -> class "u-c-red" -->
                        <strong class="u-c-red">0:2</strong>
                        <!-- Tie state -> class "u-c-grey--100" -->
                        <!-- <strong class="u-c-grey--100">2:2</strong> -->
                        <abbr title="Španělsko">ESP</abbr>
                        <span class="Flag fi fi-es fis"></span>
                      </a>
                    </td>
                  </tr>
                  <!-- Match row -->
